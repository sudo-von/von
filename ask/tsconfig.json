{
  "compilerOptions": {
    "lib": ["es6"],
    "strict": true,
    "outDir": "build",
    "target": "es2016",
    "module": "commonjs",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDirs": ["src", "tests"],
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "src/infrastructure/servers/express-server/types",
      "node_modules/@types"
    ],
    "paths": {
      "@entities/*": ["./src/domain/entities/*"],
      "@repositories/*": ["./src/domain/repositories/*"],
      "@usecases/*": ["./src/domain/usecases/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"]
}
