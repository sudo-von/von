{
  "compilerOptions": {
    "lib": ["es6"],
    "strict": true,
    "outDir": "build",
    "target": "es2016",
    "module": "commonjs",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDirs": ["src", "tests"],
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"]
}
