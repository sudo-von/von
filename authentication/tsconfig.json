{
  "compilerOptions": {
    "lib": ["es6"],
    "strict": true,
    "rootDirs": ["src", "tests"],
    "outDir": "build",
    "target": "es2016",
    "module": "commonjs",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots" : ["./src/infrastructure/types", "./node_modules/@types"],
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"]
}